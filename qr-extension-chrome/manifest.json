{
  "manifest_version": 3,
  "name": "QR Code Generator",
  "version": "1.0.0",
  "description": "Generate QR codes from selected text, links, or clipboard content",
  "permissions": ["contextMenus", "clipboardRead", "storage", "notifications", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "commands": {
    "generate-qr": {
      "suggested_key": {
        "default": "Alt+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Generate QR code from selected text"
    }
  }
}
  
